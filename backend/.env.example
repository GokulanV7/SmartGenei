# Environment Variables for SmartGeni
# Copy this file to .env and fill in your actual values

# Required: Groq API Key (Get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Optional: YouTube Data API Key (Get from Google Cloud Console)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: Model Configuration
GROQ_MODEL_NAME=llama3-8b-8192
MODEL_TEMPERATURE=0.3

# Optional: Feature Toggles
ENABLE_WEB_SEARCH=true
ENABLE_YOUTUBE_SEARCH=true

# Optional: Search Configuration
MAX_SEARCH_RESULTS_CHARS=3500
MAX_YOUTUBE_RESULTS=3
